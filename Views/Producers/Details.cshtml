@model Producer

@{
    ViewData["Title"] = "Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h1>Details for @Model.FullName</h1>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px;" src=""
                        id="profilePictureURLPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                    {
                        <a asp-action="Edit" asp-route-id=@Model.Id class="btn btn-outline-success float-right">Edit</a>
                    }
                    <a asp-action="index" class="btn btn-outline-secondary">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {
        var output = document.getElementById('profilePictureURLPreview');
        output.src = $("#ProfilePictureURL").val();
    })


</script>
}