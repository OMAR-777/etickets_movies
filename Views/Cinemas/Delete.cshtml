@model Cinema

@{
    ViewData["Title"] = "Delete a Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="text-center pb-3">
        <h1>Are you sure?</h1>
        <h3>You want to delete <b>@Model.Name</b> Cinema?</h3>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px;" src=""
                        id="LogoPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right">
                    </form>
                    <a asp-action="index" class="btn btn-outline-secondary">Show All</a>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {
        var output = document.getElementById('LogoPreview');
        output.src = $("#Logo").val();
    })


</script>
}